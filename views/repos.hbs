<div class="card">
  <div class="header" style="padding:16px 16px 0 16px">
    <div class="title">Repositories ({{total}})</div>
    <form method="get" class="toolbar">
      <input class="input" type="text" name="q" value="{{q}}" placeholder="Tìm theo tên..." />
      <select class="select" name="visibility">
        <option value="">Tất cả</option>
        <option value="private" {{#if (eq visibility "private")}}selected{{/if}}>Private</option>
        <option value="public"  {{#if (eq visibility "public")}}selected{{/if}}>Public</option>
      </select>
      <button class="btn btn-primary" type="submit">Lọc</button>
      <a class="btn" href="/repos/sync?org={{org}}">↻ Sync</a>
    </form>
  </div>

  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th style="width:60%">Repository</th>
          <th style="width:15%">Visibility</th>
          <th style="width:25%">Updated</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          <tr>
            <td>
              <div style="font-weight:600">
                <a href="{{this.htmlUrl}}" target="_blank" rel="noreferrer">{{this.fullName}}</a>
              </div>
              {{#if this.description}}
                <div style="color:#94a3b8; font-size:13px">{{this.description}}</div>
              {{/if}}
            </td>
            <td>
              {{#if this.private}}
                <span class="badge private">Private</span>
              {{else}}
                <span class="badge public">Public</span>
              {{/if}}
            </td>
            <td>
              <div>{{this.updatedAt}}</div>
            </td>
          </tr>
        {{/each}}
        {{#unless items.length}}
          <tr><td colspan="3" style="color:#94a3b8">Không có dữ liệu</td></tr>
        {{/unless}}
      </tbody>
    </table>
  </div>

  <div class="footer">
    <div>Trang {{page}} / {{lastPage}}</div>
    <div class="pagination">
      <a class="page-btn" href="/repos?page=1&q={{q}}&visibility={{visibility}}">«</a>
      <a class="page-btn" href="/repos?page={{prevPage}}&q={{q}}&visibility={{visibility}}" {{#if isFirst}}disabled{{/if}}>‹</a>
      <a class="page-btn" href="/repos?page={{nextPage}}&q={{q}}&visibility={{visibility}}" {{#if isLast}}disabled{{/if}}>›</a>
      <a class="page-btn" href="/repos?page={{lastPage}}&q={{q}}&visibility={{visibility}}">»</a>
    </div>
  </div>
</div>
